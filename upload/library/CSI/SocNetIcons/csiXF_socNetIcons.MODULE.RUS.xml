    <template title="csiXF_socNetIcons.css" version_id="1" version_string="1.0.0"><![CDATA[.csiXF_socNetIcons {
  overflow: hidden;
}

.csiXF_socNetIcons li {
  float: left;
  margin: 0 10px 10px 0;
}

.csiXF_socNetIcons li.fb a {
  background-color: #3b5998;
}

.csiXF_socNetIcons li.github a {
  background-color: #444;
}

.csiXF_socNetIcons li.gplus a {
  background-color: #dd4b39;
}

.csiXF_socNetIcons li.tw a {
  background-color: #55acee;
}

.csiXF_socNetIcons li.vimeo a {
  background-color: #1ab7ea;
}

.csiXF_socNetIcons li.vk a {
  background-color: #587ea3;
}

.csiXF_socNetIcons li.youtube a {
  background-color: #dc2725;
}

.csiXF_socNetIcons li a {
  display: block;
  padding: 5px;
  border-radius: 4px;
}

.csiXF_socNetIcons li a,
.csiXF_socNetIcons li a:hover {
  color: #fff;
}]]></template>
